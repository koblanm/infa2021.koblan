#include <iostream>
#include<cmath>
using namespace std;

int main()
{
    int N;
    cin >>N;
    for (int i=1; i<N+1; i++){
        for (int k=1; k<i; k++){
            cout << " " ;
        }

        for (int k=1; k<N+3-2*i; k++){
            cout << "*" ;
        }
        for (int k=1; k<i; k++){
            cout << " " ;
        }
        cout << " " << endl;
    }
    return 0;
}
